{
  "name": "Hello GCM",
  "version": "1.0.0",
  "manifest_version": 2,

  "description": "GCM for Chrome Extension Demo",

  "browser_action": {
    "default_title": "Hello, GCM!",
    "default_popup": "index.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": ["background", "pushMessaging", "notifications"],
  "web_accessible_resources": ["img/icon48.png"],
}
